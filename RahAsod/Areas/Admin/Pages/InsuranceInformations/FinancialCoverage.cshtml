@page
@model RahAsod.Areas.Admin.Pages.InsuranceInformations.FinancialCoverageModel
@{
}
<style>

    #formAdd {
        padding-right: 40px;
    }
</style>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">پوشش مالي</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <br />
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h4>افزودن پوشش مالي جديد</h4>
                </div>
                <div class="panel-body">
                    <form method="post">
                        <div class="alert-danger">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>

                        <div class="form-group row">
                            <input type="text" asp-for="addFinancialCoverage.BasePrice" class="form-control" placeholder="قيمت پايه" />
                            <span asp-validation-for="addFinancialCoverage.BasePrice" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <input type="text" asp-for="addFinancialCoverage.FinancialCoefficient" class="form-control" placeholder="ضريب مالي" />
                            <span asp-validation-for="addFinancialCoverage.FinancialCoefficient" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-success btn-block text-white"> ثبت</button>
                    </form>
                </div>

            </div>
        </div>
    </div>



    <hr /> 
    <br />
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>جدول پوشش هاي مالي ثبت شده</h4>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th>رديف</th>
                                    <th>قيمت پايه</th>
                                    <th>ضريب مالي</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var items in Model.showfinancialCoverage)
                                {
                                    <tr>
                                        <td>@items.CarThirdPartyInsuranceFinancialCoverageID</td>
                                        <td>@items.BasePrice</td>
                                        <td>@items.FinancialCoefficient</td>
                                        <td>
                                            <button asp-route-id="@items.CarThirdPartyInsuranceFinancialCoverageID" class="btn btn-warning btn-xs"><i class="fa fa-pencil"></i></button>
                                            <button type="button" asp-route-id="@items.CarThirdPartyInsuranceFinancialCoverageID" data-toggle="modal" data-target="#ExitModal" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i></button>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>


<!--modal-->
<div class="modal fade" id="ExitModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header ">
                <h5 class="modal-title">حذف ماشين</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>آیا برای حذف اطمینان دارید ؟</span>
            </div>
            <div class="modal-footer">
                <form method="post">
                    <button type="submit" class="btn btn-danger">حذف</button>
                </form>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">انصراف</button>
            </div>
        </div>
    </div>
</div>
<!--End modal-->
<script>
    $('#ExitModal').on('shown.bs.modal', function () {
        $('#ExitModal').trigger('focus')
    })
</script>
