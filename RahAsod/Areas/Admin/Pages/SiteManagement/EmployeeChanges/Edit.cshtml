@page
@model RahAsod.Areas.Admin.Pages.SiteManagement.EmployeeChanges.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Pages/Shared/_AdminPanelLayout.cshtml";
}
<div id="page-wrapper">
    <h1>Edit</h1>

    <h4>Employee</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Employee.Id" />
                <div class="form-group">
                    <label asp-for="Employee.fullName" class="control-label"></label>
                    <input asp-for="Employee.fullName" class="form-control" />
                    <span asp-validation-for="Employee.fullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employee.position" class="control-label"></label>
                    <input asp-for="Employee.position" class="form-control" />
                    <span asp-validation-for="Employee.position" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>

