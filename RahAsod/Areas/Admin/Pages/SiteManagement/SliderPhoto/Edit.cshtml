@page
@model RahAsod.Areas.Admin.Pages.SiteManagement.SliderPhoto.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Pages/Shared/_AdminPanelLayout.cshtml";
}
<div id="page-wrapper">
    

    <h4>ويرايش عکس</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="model.Id" />
                <div class="form-group">
                    <label asp-for="model.picPath" class="control-label"></label>
                    <input asp-for="model.picPath" name="model.picPath" class="form-control" />
                    <span asp-validation-for="model.picPath" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="model.picName" class="control-label"></label>
                    <input asp-for="model.picName" name="model.picName" class="form-control" />
                    <span asp-validation-for="model.picName" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="model.show" /> @Html.DisplayNameFor(model => model.model.show)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="ثبت" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">برگشت</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
