@page
@model RahAsod.Areas.Admin.Pages.SiteManagement.SliderPhoto.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Pages/Shared/_AdminPanelLayout.cshtml";
}
<div id="page-wrapper">
    <h1>Create</h1>

    <h4>Slider</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label>آپلود تصویر</label>
                    <input asp-for="formFile" type="file" id="fileInput" class="form-control" />
           
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="model.show" /> @Html.DisplayNameFor(model => model.model.show)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
