@page
@model RahAsod.Pages.TypesOfInsurancePages.Issued.CarThirdPartyIssuedModel
@{
    Layout = "~/Pages/Shared/_Layout.cshtml";

}
<style>

    #main {
        padding: 2% 5%;
        background-color: #67B0D1CC;
        direction: rtl;
        text-align: right
    }
</style>

<div style="padding:50px">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">

            <div class="col-lg-12">
                <div class="p-5">

                    <div class="form-group col-12">
                        <input type="number" class="form-control form-control-user text-center" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="مبلغ حق بیمه برای شما">
                    </div>
                    <div class="container">
                        <div class="form-group">
                            <div class="col-md-12">

                                <form method="get">
                                    <div class="row">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group col-md-2">
                                            <label asp-for="DescriptionOfThirdPartyInsurance.CarTag" class="control-label"></label>
                                            <input asp-for="DescriptionOfThirdPartyInsurance.CarTag" class="form-control" />
                                            <span class="text-danger"></span>
                                        </div>
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group col-md-2">
                                            <label asp-for="DescriptionOfThirdPartyInsurance.CarThirdPartyInsuranceFinancialCoverageID" class="control-label"></label>
                                            <input asp-for="DescriptionOfThirdPartyInsurance.CarThirdPartyInsuranceFinancialCoverageID" class="form-control" placeholder="پوشش مالی" disabled />

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                @* <label asp-for="DescriptionOfThirdPartyInsurance.TypeOfCar" class="control-label"></label>*@
                                                <input asp-for="DescriptionOfThirdPartyInsurance.CarType" class="form-control" placeholder="نوع وسیله نقلیه" disabled />


                                                <span asp-validation-for="DescriptionOfThirdPartyInsurance.CarType" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                @*k  <label asp-for="DescriptionOfThirdPartyInsurance.StyleCar" class="control-label"></label>*@
                                                <input asp-for="DescriptionOfThirdPartyInsurance.CarBrigade" placeholder="نوع ماشین" class="form-control" disabled />
                                                <span asp-validation-for="DescriptionOfThirdPartyInsurance.CarBrigade" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                @*  <label asp-for="DescriptionOfThirdPartyInsurance.CarModel" class="control-label"></label>*@
                                                <input asp-for="DescriptionOfThirdPartyInsurance.CarModel" placeholder="مدل" class="form-control" disabled />
                                                <span asp-validation-for="DescriptionOfThirdPartyInsurance.CarModel" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-3">
                                            @*  <label asp-for="DescriptionOfThirdPartyInsurance.CarColor" class="control-label"></label>*@
                                            <input asp-for="DescriptionOfThirdPartyInsurance.CarColor" placeholder="رنگ" class="form-control" disabled />
                                            <span asp-validation-for="DescriptionOfThirdPartyInsurance.CarColor" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <hr />


                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @* <label asp-for="DescriptionOfThirdPartyInsurance.CarChassisNumber" class="control-label"></label>*@
                                                <input asp-for="DescriptionOfThirdPartyInsurance.CarChassisNumber" placeholder="شماره شاسي" class="form-control" disabled />
                                                <span asp-validation-for="DescriptionOfThirdPartyInsurance.CarChassisNumber" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @* <label asp-for="DescriptionOfThirdPartyInsurance.VinCar" class="control-label"></label>*@
                                                <input asp-for="DescriptionOfThirdPartyInsurance.CarVin" placeholder="شماره VIN" class="form-control" disabled />
                                                <span asp-validation-for="DescriptionOfThirdPartyInsurance.CarVin" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @* <label asp-for="DescriptionOfThirdPartyInsurance.CarEngineNumber" class="control-label"></label>*@
                                                <input asp-for="DescriptionOfThirdPartyInsurance.CarEngineNumber" placeholder="شماره موتور" class="form-control" disabled />
                                                <span asp-validation-for="DescriptionOfThirdPartyInsurance.CarEngineNumber" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @*  <label asp-for="DescriptionOfThirdPartyInsurance.DriverDiscountPercentage" class="control-label"></label>*@
                                                <input asp-for="DescriptionOfThirdPartyInsurance.DriverDiscountPercentage" placeholder="درصد تخفیف راننده" class="form-control" disabled />
                                                <span asp-validation-for="DescriptionOfThirdPartyInsurance.DriverDiscountPercentage" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @*     <label asp-for="DescriptionOfThirdPartyInsurance.PercentageOfInsuranceDiscount" class="control-label"></label>*@
                                                <input asp-for="DescriptionOfThirdPartyInsurance.PolicyDicountPercantage" class="form-control" placeholder="درصد تخفیف بیمه نامه" disabled />

                                                <span asp-validation-for="DescriptionOfThirdPartyInsurance.PolicyDicountPercantage" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @*    <label asp-for="DescriptionOfThirdPartyInsurance.CarCapacity" class="control-label"></label>*@
                                                <input asp-for="DescriptionOfThirdPartyInsurance.CarCapacity" placeholder="ظرفيت" class="form-control" disabled />

                                                <span asp-validation-for="DescriptionOfThirdPartyInsurance.CarCapacity" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">

                                        <div class="form-group col-md-2">
                                            @*   <label asp-for="DescriptionOfThirdPartyInsurance.UsedCar" class="control-label"></label>*@
                                            <input asp-for="DescriptionOfThirdPartyInsurance.CarUsage" placeholder="مورد استفاده" class="form-control" disabled />

                                            <span asp-validation-for="DescriptionOfThirdPartyInsurance.CarUsage" class="text-danger"></span>
                                        </div>
                                        <div class="form-group form-check col-md-3">
                                            <label class="form-check-label">
                                                @Html.DisplayNameFor(model => model.DescriptionOfThirdPartyInsurance.TowTruckCar)   <input class="form-check-input" asp-for="DescriptionOfThirdPartyInsurance.TowTruckCar" />
                                            </label>
                                        </div>
                                    </div>







                                </form>
                            </div>
                        </div>

                    </div>










                    <div class="row" style="padding:20px">

                        <a href="index.html" class="btn text-white text-center btn-success col-md-4" style="padding: 5px">
                            تایید اطلاعات ،صدور بیمه نامه وپرداخت
                        </a>

                        <a href="index.html" class="btn text-white text-center btn-secondary col-md-4" style="padding: 5px">
                            ویرایش اطلاعات
                        </a>

                        <a href="index.html" class="btn  text-white text-center btn-danger  col-md-4" style="padding:5px">
                            لغو صدور
                        </a>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


