@page
@model RahAsod.Pages.CustomerRegistrationPages.ForgotPasswordCustomerPageModel
@{
    Layout = "_LayoutForCustomerRegister";
}

<div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          
            <div class="col-lg-12">
                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-2">
                            رمز عبور خود را فراموش کرده اید؟
                        </h1>
                        <p class="mb-4">
                            ما آن را دریافت می کنیم ، اتفاقاتی می افتد. فقط آدرس ایمیل خود را در زیر وارد کنید و ما یک پیوند برای تنظیم مجدد رمز عبور شما ارسال خواهیم کرد
                        </p>
                    </div>
                    <form class="user">
                        <div class="form-group">
                            <input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="لطفا کد ملی خود را وارد کنید">
                        </div>
                        <a href="login.html" class="btn btn-user btn-block text-white" style="background-color:#67B0D1CC;">
                            ریست کردن پسوورد 
                        </a>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a class="small" href="register.html">درست کردن اکانت</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="login.html">
                            قبلاً حساب دارید؟ وارد شوید!
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
