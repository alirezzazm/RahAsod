@page
@model RahAsod.Pages.CustomerRegistrationPages.LoginCustomerPageModel
@{
    Layout = "_LayoutForCustomerRegister";
}
<div class="container form-direction">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">خوش آمدید</h1>
                        </div>
                        <form class="user">
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user text-center" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="کد ملی">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control form-control-user text-center" id="exampleInputPassword" placeholder="رمز عبور">
                            </div>
                           
                            <a href="index.html" class="btn btn-user text-white text-center btn-block" style="background-color:#67B0D1CC;">
                                ورود
                            </a>                         
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="forgot-password.html">رمز عبور را فراموش کردم</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="Register">ثبت نام</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

