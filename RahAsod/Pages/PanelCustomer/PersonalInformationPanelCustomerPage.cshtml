@page
@model RahAsod.Pages.PanelCustomer.PersonalInformationPanelCustomerPageModel
@{
    Layout = "_LayoutForPanelCutomer";
}

<div class="row">
    <div class="col-md-6">
        <div>
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">

                    <div class="col-lg-12">
                        <div class="p-5">

                            <form class="user" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="text" class="form-control form-control-user text-center" id="exampleFirstName" placeholder="نام" asp-for="RegisterCustomer.FirstName" />
                                        <span asp-validation-for="RegisterCustomer.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="text" class="form-control form-control-user text-center" id="exampleLastName" placeholder="نام خانوادگی" asp-for="RegisterCustomer.LastName" />
                                        <span asp-validation-for="RegisterCustomer.LastName" class="text-danger"></span>
                                    </div>
                                </div>


                                <div class="form-group row">
                                    <div class="col-sm-4 mb-3 mb-sm-0">
                                        <input type="number" class="form-control form-control-user text-center" id="exampleFirstName" placeholder="کد ملی" asp-for="RegisterCustomer.NationalCode" />
                                        <span asp-validation-for="RegisterCustomer.NationalCode" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-4">
                                        <input type="number" class="form-control form-control-user text-center" id="exampleLastName" placeholder="شماره همراه" asp-for="RegisterCustomer.PhoneNumber" />
                                        <span asp-validation-for="RegisterCustomer.PhoneNumber" class="text-danger"></span>

                                    </div>
                                    <div class="col-sm-4">
                                        <input type="number" class="form-control form-control-user text-center" id="exampleLastName" placeholder="شماره منزل" asp-for="RegisterCustomer.HomeNumber" />
                                        <span asp-validation-for="RegisterCustomer.HomeNumber" class="text-danger"></span>

                                    </div>
                                </div>



                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user text-center" id="exampleInputEmail" placeholder="ایمیل" asp-for="RegisterCustomer.Email" />
                                    <span asp-validation-for="RegisterCustomer.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user text-center" id="exampleInputEmail" placeholder="آدرس منزل" asp-for="RegisterCustomer.Adrress" />
                                    <span asp-validation-for="RegisterCustomer.Adrress" class="text-danger"></span>
                                </div>




                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <input type="password" class="form-control form-control-user text-center" id="exampleInputPassword" placeholder="رمز" asp-for="RegisterCustomer.Password" />
                                        <span asp-validation-for="RegisterCustomer.Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-sm-6">
                                        <input type="password" class="form-control form-control-user text-center" id="exampleRepeatPassword" placeholder="تکرار رمز" asp-for="RegisterCustomer.RepeatPassword" />
                                        <span asp-validation-for="RegisterCustomer.RepeatPassword" class="text-danger"></span>
                                    </div>
                                </div>



                                <a asp-area="" asp-page="/MainPage/HomePage"
                                   class="btn btn-user btn-block text-white"
                                   style="background-color:#67B0D1CC;" value="Create">
                                    ویرایش اطلاعات
                                </a>
                                <hr>


                            
                            </form>

                            @section Scripts {
                                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="col-md-6" style="padding-left:50px">
        <img src="~/img/favicon.png" rounded-circle" alt="Cinque Terre" style="width:300px;height:300px;" />


    </div>

</div>

