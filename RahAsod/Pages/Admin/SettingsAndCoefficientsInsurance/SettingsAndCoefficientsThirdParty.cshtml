@page
@model RahAsod.Pages.Admin.SettingsAndCoefficientsInsurance.SettingsAndCoefficientsThirdPartyModel
@{
    Layout = "_LayoutForAdmin";
}

<div class="card-body">
    <div class="table-responsive">
        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">

            <div class="row">
                <div class="col-sm-12">
                    <table class="table table-bordered dataTable table-striped" id="dataTable" width="100%"
                           cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                        <thead>
                            <tr role="row">
                                <th style="width: 10px;"></th>
                                <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" style="width: 77px;">تعداد سیلند</th>
                                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Position: activate to sort column ascending" style="width: 117px;">مالی 11 و حداقل</th>
                                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Office: activate to sort column ascending" style="width: 56px;">مالی 22</th>
                                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Age: activate to sort column ascending" style="width: 31px;">34مالی </th>
                                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Start date: activate to sort column ascending" style="width: 68px;">مالی 44</th>
                                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" aria-label="Salary: activate to sort column ascending" style="width: 67px;">مالی55</th>
                            </tr>
                        </thead>

                        <tbody>


                            <tr role="row" class="odd">
                                <td>
                                    <!-- Default unchecked -->
                                    <div class="custom-control custom-radio">
                                        <input type="radio" class="custom-control-input" id="defaultUnchecked1" name="defaultExampleRadios">
                                        <label class="custom-control-label" for="defaultUnchecked1"></label>
                                    </div>
                                </td>
                                <td class="sorting_1">ماشین های 3 سیلندر و پراید </td>
                                <td>20/080/000</td>
                                <td>%</td>
                                <td>%</td>
                                <td>%</td>
                                <td>%</td>
                            </tr>
                            <tr role="row" class="even">
                                <td>
                                    <!-- Default checked -->
                                    <div class="custom-control custom-radio">
                                        <input type="radio" class="custom-control-input" id="defaultUnchecked2" name="defaultExampleRadios">
                                        <label class="custom-control-label" for="defaultUnchecked2"></label>
                                    </div>
                                </td>
                                <td class="sorting_1">ماشین های 4 سیلندر تیبا ،سمند ،پژو</td>
                                <td>24/000/000</td>
                                <td>%</td>
                                <td>%</td>
                                <td>%</td>
                                <td>%</td>
                            </tr>





                        </tbody>

                    </table>
                </div>


                <div class="container" style="padding:50px;">
                    <div class="row justify-content-md-center">
                        <div class="col col-lg-2">
                            <a href="#" class="btn btn-info btn-icon-split">
                                <!-- Button to Open the Modal -->
                                <span class="text" data-toggle="modal" data-target="#myModal">ویرایش</span>

                            </a>
                        </div>
                        <div class="col-md-2">
                            <a href="#" class="btn btn-danger btn-icon-split">
                                <!-- Button to Open the Modal -->
                                <span class="text" data-toggle="modal" data-target="#myModal">حذف</span>
                            </a>
                        </div>
                        <div class="col col-lg-2">
                            <a href="#" class="btn btn-success btn-icon-split">
                                <!-- Button to Open the Modal -->
                                <span class="text" data-toggle="modal" data-target="#myModal">اضافه کردن</span>
                            </a>
                        </div>

                    </div>

                </div>


            </div>

            <!-- The Modal -->
            <div class="container">



                <div class="modal" id="myModal">
                    <div class="modal-dialog">
                        <div class="modal-content">

                            <!-- Modal Header -->
                            <div class="modal-header">
                                <h4 class="modal-title text-center">بیمه شخص ثالث</h4>
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                            </div>

                            <!-- Modal body -->
                            <div class="modal-body">
                                <div class="card o-hidden border-0 shadow-lg my-5">
                                    <div class="card-body p-0">
                                        <!-- Nested Row within Card Body -->
                                        <div class="row">

                                            <div class="col-lg-12">
                                                <div class="p-5">

                                                    <form class="user">
                                                        <div class="form-group">
                                                            <div class="input-group-prepend">
                                                                @* <label asp-for="DescriptionOfThirdPartyInsurance.TypeOfCar"
                                                                    class="control-label"></label>*@
                                                                <select class="form-control">
                                                                    <option disabled selected hidden>نوع وسیله نقلیه</option>
                                                                    <option>ماشین 3 سیلندر</option>
                                                                    <option>ماشین 4 سیلندر</option>
                                                                    <option>6سیلندر و بیشتر</option>
                                                                    <option>موتور تک سیلندر</option>
                                                                    <option>موتور دوسیلندر</option>
                                                                </select>
                                                            </div>
                                                        </div>


                                                        <div class="form-group">
                                                            <input type="text" class="form-control form-control-user text-center" id="exampleInputPassword" placeholder="ظرفیت ماشین">
                                                        </div>

                                                        <div class="form-group">

                                                            @* <label asp-for="DescriptionOfThirdPartyInsurance.TypeOfCar"
                                                                class="control-label"></label>*@
                                                            <input type="text" class="form-control form-control-user text-center" id="exampleInputPassword" placeholder="لطفا نام وسیله ی نقلیه را وارد کنید">


                                                        </div>
                                                        <div class="form-group">
                                                            <input type="number" class="form-control form-control-user text-center" id="exampleInputPassword" placeholder="حق بیمه با حداقل مالی 11 میلیون">
                                                        </div>
                                                     


                                                    </form>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Modal footer -->
                            <div class="modal-footer container" style="padding:10px">
                                <div class="row">
                                    <div class="col">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">لغو</button>
                                    </div>

                                    <div class="col">
                                        <button type="button" class="btn btn-success" data-dismiss="modal">ثبت</button>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
