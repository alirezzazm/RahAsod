@page
@model RahAsod.Pages.Admin.SiteFrontPageSettings.SiteFirstSliderSettingModel
@{
    Layout = "_LayoutForAdmin";
}
<div>
    <div class="container">
        <div class="row justify-content-md-center">

            <div id="carouselExampleInterval" class="carousel slide col-md-5 col-sm" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active" data-interval="10000">
                        <img src="~/img/team/team-1.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item" data-interval="2000">
                        <img src="~/img/team/team-2.jpg" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/team/team-3.jpg" class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="container" style="padding:50px;">
        <div class="row justify-content-md-center">
            <div class="col col-lg-2">
                <a href="#" class="btn btn-info btn-icon-split">
                    <!-- Button to Open the Modal -->
                    <span class="text" data-toggle="modal" data-target="#myModal">ویرایش</span>

                </a>
            </div>
            <div class="col-md-2">
                <a href="#" class="btn btn-danger btn-icon-split">
                    <!-- Button to Open the Modal -->
                    <span class="text" data-toggle="modal" data-target="#myModal">حذف</span>
                </a>
            </div>
            <div class="col col-lg-2">
                <a href="#" class="btn btn-success btn-icon-split">
                    <!-- Button to Open the Modal -->
                    <span class="text" data-toggle="modal" data-target="#myModal">اضافه کردن</span>
                </a>
            </div>

        </div>

    </div>


    <!--Modal-->
    <div class="container">



        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">

                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h4 class="modal-title text-center">اسلایدر صفحه اول</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                        <div class="card o-hidden border-0 shadow-lg my-5">
                            <div class="card-body p-0">
                                <!-- Nested Row within Card Body -->
                                <div class="row">

                                    <div class="col-lg-12">
                                        <div class="p-5">

                                            <form class="user">
                                                <div class="form-group">
                                                    <div class="container">
                                                        <img src="~/img/team/team-2.jpg" class="container" />
                                                    </div>
                                                </div>


                                                <div class="form-check">
                                                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                                    <label class="form-check-label" for="exampleCheck1">علامت دار کردن</label>
                                                </div>

                                                <div class="form-group">
                                                    <button type="button" class="btn btn-outline-secondary data-dismiss="modal">اضافه کردن از سیستم</button>
                                                </div>




                                            </form>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer container" style="padding:10px">
                        <div class="row">
                            <div class="col">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">لغو</button>
                            </div>

                            <div class="col">
                                <button type="button" class="btn btn-success" data-dismiss="modal">ثبت</button>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>

</div>


